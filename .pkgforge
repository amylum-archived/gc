name 'gc'
org 'amylum'

deps(
  libatomic_ops: {
    version: '7.6.4-1',
    checksum: 'c151dbcec5b1f323c901f26ff9646558b30253c47a46f649e66cd3c403cd2f09'
  },
  'linux-api-headers': {
    version: '4.15-2',
    checksum: 'dbfe68e7620b09fe2996d83fe4ae738dddb2486885b9d5ef3dc27ae77d7585ba'
  }
)

configure_flags(
  prefix: '/usr',
  'enable-cplusplus': nil
)

cflags
cflags %w(-DNO_GETCONTEXT)
harden

patch 'license.patch'
patch 'time-patch.patch'
build do
  run './autogen.sh'
  configure
  make
  install
end

