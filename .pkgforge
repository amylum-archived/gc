name 'gc'
org 'amylum'

deps(
  libatomic_ops: {
    version: '7.4.8-1',
    checksum: '991dafdaf4288cd14ccb5e7dc6be689849323fcd92048040dec5d65813776309'
  },
  'linux-api-headers': {
    version: '4.13-1',
    checksum: '50b2288419fe132c061bdf3d297293011929abc1092ffaa5e523ad6549b4f5fa'
  }
)

configure_flags(
  prefix: '/usr',
  'enable-cplusplus': nil
)

cflags
cflags %w(-DNO_GETCONTEXT)
harden

patch 'license.patch'
patch 'time-patch.patch'
build do
  run './autogen.sh'
  configure
  make
  install
end

