name 'gc'
org 'amylum'

deps(
  libatomic_ops: {
    version: '7.4.8-1',
    checksum: '991dafdaf4288cd14ccb5e7dc6be689849323fcd92048040dec5d65813776309'
  },
  'linux-api-headers': {
    version: '4.14-1',
    checksum: '106c40ebd4826cf8fda5235cb9619e37d79efea6e64545d64bb78d4a829f29a6'
  }
)

configure_flags(
  prefix: '/usr',
  'enable-cplusplus': nil
)

cflags
cflags %w(-DNO_GETCONTEXT)
harden

patch 'license.patch'
patch 'time-patch.patch'
build do
  run './autogen.sh'
  configure
  make
  install
end

